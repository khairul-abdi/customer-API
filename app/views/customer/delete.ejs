<%- include ('../partials/header'); -%>

<main>
  <div class="jumbotron">
    <h2>Delete</h2>
    <form action="/customer/delete/<%= data.id %>" method="post">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= data.name %>" disabled />
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= data.email %>" disabled />
      </div>
      <div class="form-group">
        <label for="phone">Phone No:</label>
        <input type="text" class="form-control" id="phone_no" name="phone_no" value="<%= data.phone_no %>" disabled />
      </div>
      <div class="form-group">
        <label for="exampleFormControlSelect1">Status User:</label>
        <input type="text" class="form-control" id="active" name="active" disabled <% if (data.active == 1) { %>
          value="active" <% } else { %> value="no-active" <% } %> />
      </div>
      <button type="submit" class="btn btn-danger">Delete</button>
      <a href="/customers"><button type="button" class="btn btn-secondary">Cancel</button></a>
    </form>
  </div>
</main>

<%- include ('../partials/footer'); -%>