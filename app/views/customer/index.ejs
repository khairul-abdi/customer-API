<%- include ('../partials/header'); -%>

<main>
  <div class="jumbotron">
    <table class="table table-dark table-striped">
      <h2><%= page %></h2>
      <a href="/customer/create" class="btn btn-sm btn-primary float-lg-right mb-2">Add User</a>
      <thead>
        <tr>
          <th>No</th>
          <th>Name</th>
          <th>Email</th>
          <th>Phone No.</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach((user, index) =>{ %>
        <tr>
          <td><%= index += 1 %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.phone_no %></td>

          <% if (user.active == 1) { %>
          <td>active</td>
          <% } else { %>
          <td>no - active</td>
          <% } %>

          <td>
            <a href="customer/edit/<%= user.id %>" class="btn btn-sm btn-primary">Edit</a>
            <a href="customer/delete/<%= user.id %>" class="btn btn-sm btn-danger">Delete</a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</main>

<%- include ('../partials/footer'); -%>