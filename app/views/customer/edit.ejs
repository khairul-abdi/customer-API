<%- include ('../partials/header'); -%>

<main>
  <div class="jumbotron">
    <h2>Edit</h2>
    <form action="/customer/edit/<%= data.id %>" method="post">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" placeholder="Enter Name" name="name" value="<%= data.name %>"
          required />
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" placeholder="Enter email" name="email"
          value="<%= data.email %>" required />
      </div>
      <div class="form-group">
        <label for="phone">Phone No:</label>
        <input type="text" class="form-control" id="phone_no" placeholder="Enter Phone Number" name="phone_no"
          value="<%= data.phone_no %>" required />
      </div>
      <div class="form-group">
        <label for="exampleFormControlSelect1">Status User:</label>
        <select class="form-control" id="active" name="active" value="<%= data.active %>">
          <% if (data.active == 1) { %>
          <option value=true selected>active</option>
          <option value=false>no-active</option>
          <% } else { %>
          <option value=true>active</option>
          <option value=false selected>no-active</option>
          <% } %>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Edit</button>
      <a href="/customers"><button type="button" class="btn btn-secondary">Cancel</button></a>
    </form>
  </div>
</main>

<%- include ('../partials/footer'); -%>